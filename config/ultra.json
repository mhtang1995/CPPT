{
  "dataset": "ultra",
  "mode": "original",
  "times": "1",
  "device": 2,

  "mask_split": true,

  "backbone": "./Bert/bert-base-cased",
  "bert_name": "bert-base-cased",
  "bert_size": 768,
  "threshold_one": 0.5,
  "threshold_two": 0.8,
  "weight": 0.005,
  "threshold": 0.5,

  "ontology": "./datasets/original/ontology/ultra_types.txt",
  "train": "./datasets/original/crowd/train.json",
  "valid": "./datasets/original/crowd/dev.json",
  "test": "./datasets/original/crowd/test.json",
  "fc_param": "ultra_fc.pth",
  "dense_param": "dense.pth",
  "ln_param": "ln.pth",

  "lr": 2e-5,
  "loss_version": 2,
  "train_batch_size": 32,
  "test_batch_size": 64,
  "max_epoch": 1024,
  "valid_step": 200,
  "log_step": 20,
  "patience": 8,

  "save_dir": "./save",
  "use_checkpoint": false

}