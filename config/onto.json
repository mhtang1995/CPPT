{
  "dataset": "onto",
  "mode": "chat_cpp",
  "times": "3",
  "device": 3,

  "mask_split": true,
  "backbone": "./Bert/bert-base-cased",
  "bert_name": "bert-base-cased",
  "bert_size": 768,
  "threshold_one": 0.1,
  "threshold_two": 0.9,
  "weight": 0.5,
  "threshold": 0.3,

  "ontology": "./datasets/original/ontology/onto_ontology.txt",
  "train": "./datasets/original/ontonotes/chat_train.txt",
  "valid": "./datasets/original/ontonotes/g_dev.json",
  "test": "./datasets/original/ontonotes/g_test.json",
  "fc_param": "onto_fc.pth",
  "dense_param": "dense.pth",
  "ln_param": "ln.pth",

  "lr": 4e-6,
  "loss_version": 1,
  "train_batch_size": 16,
  "test_batch_size": 64,
  "max_epoch": 1024,
  "valid_step": 300,
  "log_step": 20,
  "patience": 5,

  "save_dir": "./save",
  "use_checkpoint": false

}